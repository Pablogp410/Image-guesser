@page
@model PictureGame.Pages.IndexModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Create";
}                

<h2>Enter a user name:</h2>

<form method="post">
    Name:
    <input asp-for="user!.Name" />
    Username:
    <input asp-for="user!.Username" />
    Password:
    <input asp-for="user!.Password" />
   
    <input type="submit" value="Create"/>
    <a asp-page="./index">Back</a>
    <br>

    @if(Model.error.Length > 0)
    {
        <div class="alert alert-danger">
            <ul>
                @foreach (var erro in Model.error)
                {
                    <li>@erro</li>
                }
            </ul>
        </div>
    } 
</form>
